<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"

    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/table_margin"
            android:columnCount="6"
            android:rowCount="3"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/team_set"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="1"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="2"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="3"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="4"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="5"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/team_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/team_a"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_1_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_2_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_3_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_4_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_5_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/team_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/team_b"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_1_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_2_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_3_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_4_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/set_5_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/table_margin"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />
            </TableRow>

        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_side"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/team_a"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/table_text_point"
                    android:textSize="@dimen/text_size_score" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_side"
                    android:layout_marginRight="@dimen/margin_side"
                    android:onClick="addPointTeamA"
                    android:text="@string/point"
                    android:textAllCaps="true" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_side"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_side"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/team_b"
                    android:textAllCaps="false"
                    android:textColor="@color/table_text_default"
                    android:textSize="@dimen/table_text_size" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@color/table_text_point"
                    android:textSize="@dimen/text_size_score" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginLeft="@dimen/margin_side"
                    android:layout_marginRight="@dimen/margin_side"
                    android:onClick="addPointTeamB"
                    android:text="@string/point"
                    android:textAllCaps="true" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:stretchColumns="*">

                    <TableRow android:gravity="center_vertical">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_side"
                            android:layout_marginRight="@dimen/margin_side"
                            android:onClick="addAceTeamA"
                            android:text="@string/ace"
                            android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/team_a_ace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAllCaps="true"
                            android:textColor="@color/table_text_point"
                            android:textSize="@dimen/text_size" />

                    </TableRow>

                    <TableRow android:gravity="center_vertical">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_side"
                            android:layout_marginRight="@dimen/margin_side"
                            android:onClick="addChallengeTeamA"
                            android:text="@string/challenge"
                            android:textAllCaps="true" />


                        <TextView
                            android:id="@+id/team_a_challenge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:text="0"
                            android:textAllCaps="true"
                            android:textColor="@color/table_text_point"
                            android:textSize="@dimen/text_size" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:stretchColumns="*">

                    <TableRow android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/team_b_ace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:gravity="right"
                            android:text="0"
                            android:textAllCaps="true"
                            android:textColor="@color/table_text_point"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_side"
                            android:layout_marginRight="@dimen/margin_side"
                            android:onClick="addAceTeamB"
                            android:text="@string/ace"
                            android:textAllCaps="true" />

                    </TableRow>

                    <TableRow android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/team_b_challenge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:gravity="right"
                            android:text="0"
                            android:textAllCaps="true"
                            android:textColor="@color/table_text_point"
                            android:textSize="@dimen/text_size" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_side"
                            android:layout_marginRight="@dimen/margin_side"
                            android:onClick="addChallengeTeamB"
                            android:text="@string/challenge"
                            android:textAllCaps="true" />


                    </TableRow>

                </TableLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="resetScore"
                android:text="@string/reset"
                android:textAllCaps="true" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>
